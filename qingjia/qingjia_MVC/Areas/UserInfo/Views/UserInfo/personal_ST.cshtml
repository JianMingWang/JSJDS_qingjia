        });
        $('input[name="ST_Tel"]').on("blur", function () {
            var Tel = $(this).val();
            checkTel(Tel);
        });
        $('input[name="ST_Email"]').on("blur", function () {
            var Email = $(this).val();
            checkEmail(Email);
        });

        function checkTel(Tel) {
            if (Tel == "") {
                notify('电话号码必须填写！', 0);
                return false;
            }
            var re = /^1\d{10}$/;
            if (re.test(Tel)) {
                return true;
            } else {
                notify('电话号码格式错误！', 0);
                return false;
            }
        }

        function checkEmail(Email) {
            if (Email == "") {
                notify('邮件必须填写！', 0);
                return false;
            }
            var reg = /^(\w)+(\.\w+)*@@(\w)+((\.\w+)+)$/;
            if (re.test(Email)) {
                return true;
            }
            else {
                notify('邮件格式错误！', 0);
                return false;
            }
        }

        //通知
        function notify(message, icons) {
            layer.msg(message, {
                icon: icons,
                time: 5000, //2秒关闭（如果不配置，默认是3秒）
                offset: 't',
                skin: 'layui-layer-lan'
            });
        }
</script>
}

