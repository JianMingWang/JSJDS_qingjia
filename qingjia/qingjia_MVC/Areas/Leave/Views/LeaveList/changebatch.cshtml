
@{
    ViewBag.Title = "changebatch";
    var F = Html.F();
    var LL_ST_Info = (qingjia_MVC.Models.vw_Student)ViewData["LL_ST_Info"];
}

@section body {

    @{
        F.PageManager.AjaxLoadingType(AjaxLoadingType.Mask);
    }

    @(F.Form()
        .BodyPadding(10)
        .AutoScroll(true)
        .ShowHeader(false)
        .ShowBorder(false)
        .ID("SimpleForm1")
        .IsViewPort(true)
        .Toolbars(
            F.Toolbar()
                .ToolbarAlign(ToolbarAlign.Center)
                .Position(ToolbarPosition.Bottom)
                .Items(
                    F.Button()
                        .ID("btnSubmit")
                        .IconFont(IconFont.Save)
                        .ValidateForms("SimpleForm1")
                        .CssClass("marginr")
                        .Text("申请修改")
                                .OnClick(Url.Action("changebatch_btnSubmit_Click"), "SimpleForm1")
                )
        )
                .Rows(
                    F.FormRow()
                        .Items(
                            F.Label()
                                .Text(@LL_ST_Info.ST_Num)
                                .Label("学号")
                                .ID("ST_Num"),
                            F.Label()
                                .Text(@LL_ST_Info.ST_Name)
                                .Label("姓名")
                                .ID("ST_Name")
                        ),
                    F.FormRow()
                        .Items(
                            F.Label()
                                .Text(ViewBag.Batch)
                                .Label("晚点名批次"),
                            F.Label()
                                .Text(ViewBag.BatchTime)
                                .Label("晚点名时间")
            //.ID("ST_Sex")
                        ),
                    F.FormRow()
                        //.Hidden(true)
                        .Items(
                            F.Label()
                                .ID("Date")
                                .Text(ViewBag.BatchDate)
                                .Label("晚点名日期")
                        ),
                    F.FormRow()
                        .Items(
                            F.Label()
                        ),
                    F.FormRow()
                        .Items(
                            F.DropDownList()
                                .ID("Batchlist")
                                .AutoSelectFirstItem(false)
                                .EmptyText("请选择晚点名批次")
                                .Required(true)
                                .DataValueField("ID")
                                .DataTextField("Name")
                                .Label("晚点名批次")
                                .DataSource(ViewBag.BatchList)
            //第一批次（18：00，新1-109）
                        ),
                    F.FormRow()
                        .Items(
                            F.Label()
                        ),
                    F.FormRow()
                        .Items(
                            F.TextArea()
                                .ID("Reason")
                                .EmptyText("请输入修改原因。（30字以内）")
                                .Required(true)
                                .Label("修改原因")
                                .AutoGrowHeight(true)
                                .AutoGrowHeightMin(100)
                                .AutoGrowHeightMax(200)
                        )
                )

    )

}

