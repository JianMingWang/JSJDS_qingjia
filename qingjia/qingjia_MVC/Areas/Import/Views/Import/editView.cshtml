
@{
    var F = Html.F();
    var info = (qingjia_MVC.Models.T_Class)ViewData["classinfo"];
}
@section body{
    <input type="hidden" id="classid" value="@info.ID" />
    <table class="table">
        <tbody>
            <tr>
                <th>班级账号：</th>
                <td>@info.ID</td>
            </tr>
            <tr>
                <th>班级名称：</th>
                <td>@info.ClassName</td>
            </tr>
            <tr>
                <th>年级：</th>
                <td>@info.Grade</td>
            </tr>
            <tr>
                <th>负责人：</th>
                <td>
                    @(F.DropDownList()
                        .ID("ddlStu")
                        .AutoSelectFirstItem(false)
                        .EmptyText("请选择班级负责人")
                        .Required(true)
                        .ShowLabel(false)
                        .ShowRedStar(false)
                        .DataSource(ViewBag.ddlStu)
                    )
                </td>
            </tr>
        </tbody>
    </table>
    
}


