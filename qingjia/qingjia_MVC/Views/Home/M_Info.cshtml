@model IEnumerable<qingjia_MVC.Models.T_Teacher>
@{
    Layout = null;
}

<table class="table">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th>编辑</th>
            <th>账号</th>
            <th>姓名</th>
            <th>性别</th>
            <th>年级</th>
            <th>手机号</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" value="@item.ID" />
                </td>
                <td>
                    <input type="image" name="audit" src="~/Content/image/edit.png" />
                </td>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Sex</td>
                <td>@item.Grade 级</td>
                @if (@item.Tel.ToString() != "NULL")
                {
                    <td>@item.Tel</td>
                }
                else
                {
                    <td>无</td>
                }
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="8">
                <ul class="pagination">
                    <li>
                        <a>首页</a>
                    </li>
                    <li>
                        <a>&laquo;</a>
                    </li>
                    <li>
                        <a>...</a>
                    </li>
                    <li>
                        <a>...</a>
                    </li>
                    <li>
                        <a>&raquo;</a>
                    </li>
                    <li>
                        <a>尾页</a>
                    </li>
                </ul>
            </td>
        </tr>
    </tfoot>
</table>

