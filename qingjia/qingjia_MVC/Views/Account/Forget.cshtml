@section script{
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    <script>
        //记录学号
        var ST_Num = "";
        //记录是否发送
        var code = "";

        $('#mainTab a').click(function (e) {
            var type;
            e.preventDefault();
            $(this).tab('show');
            if ($(this).attr('href') == '#Message') {
                type = "message";
            }
            if ($(this).attr('href') == '#Question') {
                type = "question";
            }
            console.log(type);
            $.ajax({
                //注意URL格式
                url: '/Account/ST_NumCheck_' + type + '?ST_NUM=' + ST_Num + '&type=' + type,
                success: function (response) {
                    if (type == "message") {
                        console.log('短信验证');
                        console.log('返回内容为：' + response);
                        $('#mainTab a[href="#Message"]').tab('show');
                        $('#ST_Tel').html(response);
                    }
                    if (type == "question") {
                        console.log('密保验证');
                        console.log('返回内容为：' + response);
                        $('#mainTab a[href="#Question"]').tab('show');
                        $('#Question .content-container').html(response);
                    }
                },
                error: function () {
                    notify('发生错误！',2);
                }
            });
        });

        $('.first-show input[type=image]').on("click", function (event) {
            ST_Num = document.getElementById("ST_Num").value;
            if (ST_Num == "") {
                notify("请输入学号！",0);
            }
            else {
                var type = $(this).attr('name');
                if (type == "message") {
                    console.log('当前选择类型：' + type);
                    $.ajax({
                        //注意URL格式
                        url: '/Account/ST_NumCheck_message?ST_NUM=' + ST_Num + '&type=' + type,
                        success: function (response) {
                            if (response != "") {
                                $('.first-show').hide();
                                $('.content').show();
                                $('#mainTab a[href="#Message"]').tab('show');
                                $('#ST_Tel').html(response);
                            }
                            else {
                                notify('学号不存在！',0);
                            }
                        },
                        error: function () {
                            notify('发生错误！',2);
                        }
                    });
                }
                if (type == "question") {
                    $.ajax({
                        //注意URL格式
                        url: '/Account/ST_NumCheck_question?ST_NUM=' + ST_Num + '&type=' + type,
                        success: function (response) {
                            if (response != "") {
                                $('.first-show').hide();
                                $('.content').show();
                                $('#mainTab a[href="#Question"]').tab('show');
                                $('#Question .content-container').html(response);
                            }
                            else {
                                notify('学号不存在！',0);
                            }
                        },
                        error: function () {
                            notify('发生错误！',2);
                        }
                    });
                }
            }
            event.preventDefault();
        });

        $('#myTabContent').on("click", "input[name=get]", function (event) {
            var input = $(this);
            var type = input.parents('.tab-pane').attr('id');
            //alert(type);
            if (type == "Message") {
                //短信找回
                var inputCode = document.getElementById("code").value;
                if (inputCode == "") {
                    notify('验证码不为空！',0);
                    event.preventDefault();
                    return;
                }
                if (code == "") {
                    notify('请先发送验证码！',0);
                    event.preventDefault();
                    return;
                }
                else {
                    //Ajax检验验证码的正误、返回密码
                    $.ajax({
                        //注意URL格式
                        url: '/Account/codeCheck?ST_NUM=' + ST_Num + '&code=' + inputCode,
                        success: function (response) {
                            if (response != "") {
                                input.parents('.content-container').hide();
                                input.parents('.content-container').next().show();
                                $('#psd').html(response);
                            }
                            else {
                                notify('验证码错误！',2);
                                event.preventDefault();
                                return;
                            }
                        },
                        error: function () {
                            notify('发生错误！',2);
                            event.preventDefault();
                            return;
                        }
                    });
                }
            }
            else if (type == "Question") {
                //密保找回
                //如何获取页面当前的输入框里面的文字
                //alert($('input[name=Q_Num]').val());
                var inputText = $('#SecurityForm').find('input:text');
                var Answer = [];
                for (var i = 0; i < $('input[name=Q_Num]').val() ; i++) {
                    if (inputText.eq(i).val() == "") {
                        notify('存在未填项！',0);
                        event.preventDefault();
                        return;
                    }
                    Answer.push(inputText.eq(i).val());
                }

                var A1, A2, A3;
                A1 = (Answer[0] == undefined) ? "" : Answer[0];
                A2 = (Answer[1] == undefined) ? "" : Answer[1];
                A3 = (Answer[2] == undefined) ? "" : Answer[2];
                console.log(A1);
                console.log(A2);
                console.log(A3);

                //Ajax检验验证码的正误、返回密码
                $.ajax({
                    //注意URL格式
                    url: '/Account/questionCheck?A1=' + A1 + '&A2=' + A2 + '&A3=' + A3 + '&ST_NUM=' + ST_Num,
                    success: function (response) {
                        if (response != "") {
                            notify('密保验证成功！',1);
                            input.parents('.content-container').hide();
                            input.parents('.content-container').next().show();
                            //alert(response);
                            $('#psd2').html(response);
                        }
                        else {
                            notify('密保问题回答错误！',2);
                            inputText.each(function () {
                                $(this).val('');
                            });
                            event.preventDefault();
                            return;
                        }
                    },
                    error: function () {
                        notify('发生错误！',2);
                        event.preventDefault();
                        return;
                    }
                });
                console.log(Answer);
            }
            //取消事件
            event.preventDefault();
        });

        //通知
        function notify(message, icons) {
            layer.msg(message, {
                icon: icons,
                time: 3000, //2秒关闭（如果不配置，默认是3秒）
                offset: 't',
                skin: 'layui-layer-lan'
            });
        }

        //获取验证码
        function GetCode() {
            $.ajax({
                //注意URL格式
                url: '/Account/GetCode?ST_NUM=' + ST_Num,
                success: function (response) {
                    if (response != "") {
                        notify('已发送验证码',6);
                        code = "1";//代表已发送验证码
                        $('#Message input[name=get]').show();
                    }
                    else {
                        notify('生成验证码失败！',2);
                    }
                },
                error: function () {
                    notify('发生错误！',2);
                }
            });
        }

        //跳转到登录界面
        function toLogin() {
            window.location.href = "/Account/Index";
        }
</script>
    }


